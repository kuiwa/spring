<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="textEditor" class="com.mymaven.spring.a2.TextEditor">
        <constructor-arg ref="spellChecker" />
        <constructor-arg ref="spellCheckerB" />
    </bean>

    <bean id="spellChecker" class="com.mymaven.spring.a2.SpellChecker" />
    <bean id="spellCheckerB" class="com.mymaven.spring.a2.SpellCheckerB" />
</beans>