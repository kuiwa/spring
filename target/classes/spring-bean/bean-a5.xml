<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="withListener" class="com.mymaven.spring.ConfigurationData">
        <property name="message" value="Hello World!" />
    </bean>

    <bean id="cStartEventHandler" class="com.mymaven.spring.a5.CStartEventHandler" />
    <bean id="cStopEventHandler" class="com.mymaven.spring.a5.CStopEventHandler" />
</beans>